#include<stdio.h>
#include<stdlib.h>
#include<string> 
#include<cstring>
# define MAXSIZE 100
# define SMAXSIZE 600
#include<algorithm>
typedef struct {
	long xuehao[MAXSIZE];
	long banji[MAXSIZE];
	char xingming[MAXSIZE][15];
	int  ruzhusushe[MAXSIZE];
	int sushe[SMAXSIZE];
	int size;
}wenying;

//此函数用来添加写入文件
void write(wenying *s)
{
	FILE *fp;
	char ch;
	int i;
    if((fp=fopen("F:\\数据结构\\课设\\message.txt","a"))==NULL)
    {
        printf("文件打开时出错\n");
        exit(0);
    }
	ch=getchar();
	for(i=0;i<s->size;i++)
	{
		fprintf(fp,"%ld %ld %d %s\n",s->xuehao[i],s->banji[i],s->ruzhusushe[i],s->xingming[i]);
	}
	printf("写入完成\n");
	fclose(fp);
}

//此函数用来删除和修改操作写入文件
void Write(wenying *s)
{
	FILE *fp;
	char ch;
	int i;
    if((fp=fopen("F:\\数据结构\\课设\\message.txt","w"))==NULL)
    {
        printf("文件打开时出错\n");
        exit(0);
    }
	ch=getchar();
	for(i=0;i<s->size;i++)
	{
		fprintf(fp,"%ld %ld %d %s\n",s->xuehao[i],s->banji[i],s->ruzhusushe[i],s->xingming[i]);
	}
	printf("写入完成\n");
	fclose(fp);
}

//此函数用来读取文件中的信息
void printw(wenying *s)
{
	FILE *fp;
	int len;
	char check[1024];
	if((fp=fopen("F:\\数据结构\\课设\\message.txt","r"))==NULL)
    {
        printf("文件打开时出错\n");
        exit(0);
    }
    printf("正在读取文件信息...\n") ;
	printf("文件中的学生的学号、班级、入住宿舍、姓名如下\n");
	while(fgets(check,1024,fp)!=NULL)
	{
		len=strlen(check);
		printf("%s",check);
	}
	printf("读取完成\n");
	system("pause");
	fclose(fp);
}

void init(wenying *slt)
{
	int i = 0;
	for (i = 0; i<SMAXSIZE; i++)
		slt->sushe[i] = 0;
	slt->size = 0;
}

void display(wenying *slt)
{
	int i=0;
	if(slt->size==0)
	printf("当前学生信息为空！\n"); 
	else{ 
	printf("下列展示依次按照学号，班级，入住宿舍，姓名\n");
	for(i=0;i<slt->size;i++)
		printf("%d %d %d %s\n",slt->xuehao[i],slt->banji[i],slt->ruzhusushe[i],slt->xingming[i]); 
	} 
	system("pause");
}
void add(wenying *slt) 
{
	int i;
	printf("请依次输入要添加学生的学号，班级，要加入到得宿舍号以及姓名:\n");
	long xue, ban;
	int su;
	char name[15];
	scanf("%ld%ld%d%s", &xue, &ban, &su, name);
	if (slt->sushe[su] == 6)
		printf("该宿舍已经注满，不能再添加");
	else {
		slt->xuehao[slt->size] = xue;
		slt->banji[slt->size] = ban;
		strcpy(slt->xingming[slt->size], name);
		slt->ruzhusushe[slt->size] = su;
		slt->sushe[su]++;
		slt->size++;
		printf("添加成功\n");
	}
	write(slt);
	system("pause");
}

void shanchu(wenying *slt) 
{
	long xuehao;
	int j = -1;
	printf("请输入要删除入住记录学生的学号：");
	scanf("%ld", &xuehao);
	for (int i = 0; i<slt->size; i++)
		if (xuehao == slt->xuehao[i])
			j = i;
	if (j == -1)
		printf("没有该学生的记录！");
	else
		for (j; j<slt->size; j++)
		{
			slt->xuehao[j] = slt->xuehao[j + 1];
			slt->banji[j] = slt->banji[j + 1];
			strcpy(slt->xingming[j], slt->xingming[j + 1]);
			slt->sushe[slt->ruzhusushe[j]]--;
			slt->ruzhusushe[j] = slt->ruzhusushe[j + 1];
                        printf("删除成功\n");
	                slt->size--; 
		}
	Write(slt);
	system("pause");
}
void xiugai(wenying *slt) 
{
	long xuehao, ban;
	int su;
	char name[15];
	int j = -1;
	printf("请输入需要修改的学生的学号：");
	scanf("%ld", &xuehao);
	for (int i = 0; i<slt->size; i++)
		if (xuehao == slt->xuehao[i])
			j = i;
	if (j == -1)
		printf("没有该学生的记录！");
	else
	{
		printf("请slt->size--; 依次输入希望修改学生的学号，班级，要加入到得宿舍号以及姓名:\n");
		scanf("%ld%ld%d%s", &xuehao, &ban, &su, name);
		slt->xuehao[j] = xuehao;
		slt->banji[j] = ban;
		strcpy(slt->xingming[j], name);
		slt->ruzhusushe[j] = su;
		printf("修改成功\n");
	}
	Write(slt);
	system("pause");
}

		scanf("%d", &i);
		switch (i) 
		{
		case 1:stu_record(p);break;
		case 2: printw(p); break;
		case 3: sort(p); break;
		case 4: find_record_menu(p);break;
		case 0:break;
		}
	}
	return 0;
}
